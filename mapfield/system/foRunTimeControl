{
    type            runTimeControl;
    libs            ("libutilityFunctionObjects.so");
    conditions
    {
        condition0
        {
            type            average;
            functionObject  forceCoeffs;
            fields          (Cd);
            tolerance       1e-4;
            window          100;
            windowType      exact;
            groupID         1;
        }

        condition1
        {
            type            average;
            functionObject  forceCoeffs;
            fields          (Cl);
            tolerance       1e-4;
            window          100;
            windowType      exact;
            groupID         1;
        }

        condition2
        {
            type            equationInitialResidual;
            fields          (p);
            value           1e-4;
            mode            minimum;
            groupID         1;
        }

        condition3
        {
            type            equationInitialResidual;
            fields          (U);
            value           1e-4;
            mode            minimum;
            groupID         1;
        }

        condition4
        {
            type            equationInitialResidual;
            fields          (k);
            value           1e-4;
            mode            minimum;
            groupID         1;
        }

        condition5
        {
            type            equationInitialResidual;
